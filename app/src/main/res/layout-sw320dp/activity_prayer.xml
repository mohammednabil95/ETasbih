<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2471a3"
    android:id="@+id/linearLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35">

            <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter the City Name"
                android:cursorVisible="false"
                android:textColor="#FFF"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:id="@+id/search"
                android:layout_weight="2"
                android:completionThreshold="2"
                android:popupBackground=" #d4e6f1 "/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Method"
                android:layout_gravity="center"
                android:textSize="@dimen/sp_12"
                android:textColor="#FFF"
                android:background="@drawable/outline_button"
                android:id="@+id/btnMethod"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSearch"
                android:text="Search"
                android:layout_gravity="center"
                android:textSize="@dimen/sp_12"
                android:textColor="#FFF"
                android:background="@drawable/outline_button"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_301"
            android:layout_marginTop="@dimen/dp_35"
            android:background="#d0d3d4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="@dimen/sp_15"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#4d5656 "/>

                    <TextView
                        android:layout_width="@dimen/dp_450"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:id="@+id/locationTv"
                        android:layout_weight="1"
                        android:textColor="#000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="@dimen/sp_15"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor=" #4d5656 "/>

                    <TextView
                        android:layout_width="@dimen/dp_450"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:id="@+id/dateTv"
                        android:layout_weight="1"
                        android:textColor="#000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_251">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sunrise"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Fajr"
                        android:textSize="@dimen/sp_15"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor=" #4d5656 "/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp_15"
                        android:id="@+id/fajrTv"
                        android:layout_weight="1"
                        android:textColor="#000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sun"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Dhuhr"
                        android:textSize="@dimen/sp_15"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor=" #4d5656 "/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp_15"
                        android:id="@+id/dhuhrTv"
                        android:layout_weight="1"
                        android:textColor="#000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sun"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Asr"
                        android:textSize="@dimen/sp_15"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor=" #4d5656 "/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp_15"
                        android:id="@+id/asrTv"
                        android:layout_weight="1"
                        android:textColor="#000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sunset"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Maghrib"
                        android:textSize="@dimen/sp_15"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor=" #4d5656 "/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp_15"
                        android:id="@+id/maghribTv"
                        android:layout_weight="1"
                        android:textColor="#000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/moon"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Isha"
                        android:textSize="@dimen/sp_15"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor=" #4d5656 "/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp_15"
                        android:id="@+id/ishaTv"
                        android:layout_weight="1"
                        android:textColor="#000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>